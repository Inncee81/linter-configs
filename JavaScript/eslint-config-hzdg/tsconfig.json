{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "public", ".*"]
}
